@model QLTrungTamTiemChung.Areas.Admin.Models.EntityFramework.BenhNhan

@{
    ViewBag.Title = "Chỉnh sửa";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@if (TempData["thongbao"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <strong>@TempData["thongbao"]</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon edit"></i><span class="break"></span>Chỉnh sửa khách hàng</h2>
        </div>
        <div class="box-content">
            @using (Html.BeginForm("Update", "KhachHang", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <input name="MaBN" type="text" style="display:none" value="@Model.MaBN" />

                <div class="control-group">
                    <label class="control-label" for="HoTen">Họ và tên</label>
                    <div class="controls">
                        <input class="input-xlarge focused" name="HoTen" id="HoTen" type="text" value="@Model.HoTen">
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="DiaChi">Địa chỉ</label>
                    <div class="controls">
                        <input class="input-xlarge focused" name="DiaChi" id="DiaChi" type="text" value="@Model.DiaChi">
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="SDT">Số điện thoại</label>
                    <div class="controls">
                        <input class="input-xlarge focused" name="SDT" id="SDT" type="text" value="@Model.SDT">
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="ThanhNhan">Họ và tên người thân</label>
                    <div class="controls">
                        <input class="input-xlarge focused" name="ThanhNhan" id="ThanhNhan" type="text" value="@Model.ThanhNhan">
                    </div>
                </div>

                <div class="control-group">
                    <div class="controls">
                        <input type="submit" value="Cập nhật" class="btn btn-success" />
                    </div>
                </div>
            }
        </div>
    </div><!--/span-->

</div><!--/row-->
