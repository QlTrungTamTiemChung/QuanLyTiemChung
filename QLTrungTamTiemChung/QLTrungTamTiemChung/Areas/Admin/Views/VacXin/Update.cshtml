@model QLTrungTamTiemChung.Areas.Admin.Models.EntityFramework.Vacxin

@{
    ViewBag.Title = "Chỉnh sửa";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@if (TempData["thongbao"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <strong>@TempData["thongbao"]</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon edit"></i><span class="break"></span>Chỉnh sửa vắc-xin</h2>
        </div>
        <div class="box-content">
            @using (Html.BeginForm("Update", "VacXin", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <input name="MaVX" type="text" style="display:none" value="@Model.MaVX" />
                <div class="control-group">
                    <label class="control-label" for="TenVX">Tên vắc-xin</label>
                    <div class="controls">
                        <input class="input-xlarge focused" name="TenVX" id="TenVX" type="text" value="@Model.TenVX">
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="SoLuong">Số lượng</label>
                    <div class="controls">
                        <input class="input-xlarge focused" name="SoLuong" id="SoLuong" type="text" value="@Model.SoLuong">
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="PhanLoai">Phân loại</label>
                    <div class="controls">
                        <input class="input-xlarge focused" name="PhanLoai" id="PhanLoai" type="text" value="@Model.PhanLoai">
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="DonGiaNhap">Đơn giá nhập</label>
                    <div class="controls">
                        <input class="input-xlarge focused" name="DonGiaNhap" id="DonGiaNhap" type="text" value="@Model.DonGiaNhap">
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="DonGiaBan">Đơn giá bán</label>
                    <div class="controls">
                        <input class="input-xlarge focused" name="DonGiaBan" id="DonGiaBan" type="text" value="@Model.DonGiaBan">
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="DonViTinh">Đơn vị tính</label>
                    <div class="controls">
                        <input class="input-xlarge focused" name="DonViTinh" id="DonViTinh" type="text" value="@Model.DonViTinh">
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="MaNCC">Nhà cung cấp</label>
                    <div class="controls">
                        @Html.DropDownList("MaNCC", (IEnumerable<SelectListItem>)ViewBag.DanhSachNCC, new { @class = "form-control" })
                    </div>
                </div>

                <div class="control-group">
                    <div class="controls">
                        <input type="submit" value="Cập nhật" class="btn btn-success" />
                    </div>
                </div>
            }
        </div>
    </div><!--/span-->

</div><!--/row-->
