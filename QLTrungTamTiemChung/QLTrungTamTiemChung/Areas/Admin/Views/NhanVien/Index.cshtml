@model PagedList.IPagedList<QLTrungTamTiemChung.Areas.Admin.Models.EntityFramework.NhanVien>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Danh sách";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var count = 0;
}
@if (TempData["thongbao"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <strong>@TempData["thongbao"]</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon user"></i><span class="break"></span>Danh sách nhân viên</h2>
        </div>
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Họ tên</th>
                        <th>Ngày sinh</th>
                        <th>Giới tính</th>
                        <th>Phòng ban</th>
                        <th>Chức vụ</th>
                        <th>Cơ sở</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td class="center">@item.HoTen</td>
                            <td class="center">@item.NgaySinh</td>
                            <td class="center">@item.GioiTinh</td>
                            <td class="center">@item.PhongBan</td>
                            <td class="center">@item.ChucVu</td>
                            <td class="center">@item.CoSo.TenCoSo</td>
                            <td class="center">
                                @*<a class="btn btn-success" href="#">
                                        <i class="halflings-icon white zoom-in"></i>
                                    </a>*@
                                <a class="btn btn-info" href="@Url.Action("Update","NhanVien",new { id = item.MaNV })">
                                    <i class="halflings-icon white edit"></i>
                                </a>
                                <a class="btn btn-danger" href="@Url.Action("Delete","NhanVien",new { id = item.MaNV })">
                                    <i class="halflings-icon white trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div><!--/span-->
</div><!--/row-->
